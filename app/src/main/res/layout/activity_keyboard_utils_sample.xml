<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.KeyboardUtilsSampleActivity">

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_open_keyboard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="打开键盘"
        app:layout_constraintEnd_toStartOf="@id/btn_close_keyboard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_close_keyboard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="关闭键盘"
        app:layout_constraintBottom_toBottomOf="@id/btn_open_keyboard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn_open_keyboard"
        app:layout_constraintTop_toTopOf="@id/btn_open_keyboard" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_keyboard_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="检查键盘是否打开"
        app:layout_constraintTop_toBottomOf="@id/btn_open_keyboard" />

</androidx.constraintlayout.widget.ConstraintLayout>